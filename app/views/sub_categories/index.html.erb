<div class="pull-right">
	<%= link_to 'Add sub category', {:action => 'new', :controller => "sub_categories"}, class:'btn btn-info'%>
</div>
<div>
	<h3> All sub categories' list:</h3>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
    	<% @sub_categories.each do |sub| %>
    	<tr>
    	  <td><%= '#' %></td>
    		<td><%= sub.name.capitalize %></td>
    		<td>
    			<%= link_to("Show", sub) %>
    			<%= link_to("Edit", edit_sub_category_path(sub)) %>
	            <%= link_to("Delete", sub, method: :delete) %>	
    		</td>
    	</tr>
    	<% end %>
    </tbody>
</div>
