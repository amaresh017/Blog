<div class="pull-right">
	<%= link_to 'Add category', {:action => 'new', :controller => "categories"}, class:'btn btn-info'%>
</div>
<div>
	<h3> All categories' list:</h3>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Created_at</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
    	<% @categories.each do |cat| %>
    	<tr>
    	  <td><%= '#' %></td>
    		<td><%= cat.name.capitalize %></td>
            <td><%= cat.created_at %></td>
    		<td>
    			<%= link_to("Show",   cat) %>
    			<%= link_to("Edit",   edit_category_path(cat)) %>
	            <%= link_to("Delete", cat, method: :delete) %>	
    		</td>
    	</tr>
    	<% end %>
    </tbody>
</div>
