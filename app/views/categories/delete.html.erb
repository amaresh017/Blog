<div> <h2> Deletion of category...!</h2></div>
<div>
	<%= form_for(@category, :url => {:action => "destroy", :controller => "categories", :id => @category.id}, :html => {:method =>"delete"}) do |f| %>
  <h2>Do you really want to delete the category @category.name</h2>
  <br>
  <%= f.submit "Delete", class:'btn btn-danger'%>
  <%= link_to 'Cancel', 'categories_path', class:'btn btn-primary'%>
<% end %>
</div>
	