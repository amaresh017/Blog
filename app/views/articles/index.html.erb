<div class="pull-right">
  <%= link_to 'Add article', {:action => 'new', :controller => "articles"}, class:'btn btn-info'%>
</div>
<div>
  <h3> All article's list:</h3>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Created_at</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
    	<% @articles.each do |article| %>
    	<tr>
    	  <td><%= '#' %></td>
    		<td><%= article.title %></td>
    		<td><%= article.created_at %></td>
    		<td>
    			<%= link_to "Show", article, class: "btn btn-md btn-info" %>
    			<%= link_to "Edit", edit_article_path(article), class: "btn btn-md btn-primary" %>
                <%= link_to "Destroy", article, method: :delete, class: "btn btn-md btn-danger" %>
    		</td>
    	</tr>
    	<% end %>
    </tbody>
</div>
