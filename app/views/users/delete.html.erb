<div>
	<%= form_for(@user, :url => {:action => "destroy", :controller => "users"}, :html => {:method =>"delete"}) do |f| %>
  <h2>Do you really want to delete user @user.username</h2>
  <br>
  <%= f.submit "Delete", class:'btn btn-danger'%>
  <%= link_to 'Cancel', 'users_path', class:'btn btn-primary'%>
<% end %>
</div>
	